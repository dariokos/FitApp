
@using System.Web.Mvc.Html

@{
    ViewBag.Title = "Index";
    
}

<h2>Index</h2>



@using (Html.BeginForm("Workout", "Abs"))
{
    <div class="form-group">
        @Html.Label("NumberOfExercises", "Number of Exercises:")
        @Html.DropDownList("NumberOfExercises", Enumerable.Range(1, 9).Select(i => new SelectListItem {Text = i.ToString(), Value = i.ToString()}), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("ExerciseLevel", "Your Fitness Level:")
        @Html.DropDownList("ExerciseLevel", new List<SelectListItem>()
        {
            new SelectListItem() {Text = "Beginner", Value = "beginner"},
            new SelectListItem() {Text = "Intermediate", Value = "intermediate"},
            new SelectListItem() {Text = "Advanced", Value = "advanced"}
        }, new {@class = "form-control"})
    </div>
    @Html.Label("Equipment", "Choose Equipment: ")
    <div class="checkbox">
        <label><input type="checkbox" name="pullupbar" value="pullupbar"> Pull Up Bar</label>
    </div>
    <div class="checkbox">
        <label><input type="checkbox" name="abwheel" value="abwheel"> Ab Wheel</label>
    </div>
    <div class="checkbox">
        <label><input type="checkbox" name="weights" value="weights"> Weights</label>
    </div>
    


        <button type="submit" class="btn btn-primary">Get</button>


        }



